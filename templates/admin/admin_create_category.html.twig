{% extends "base_admin.html.twig" %}

{% block title %}
    BlogSymfony |
    {% if editMode %}
        Modification catégorie
    {% else %}
        Création d'une catégorie
    {% endif %}
{% endblock %}


{% block body %}
    <h1 class="display-4 fst-italic text-center my-5">
    {% if editMode %}
        Modification de la catégorie
    {% else %}
        Nouvelle catégorie
    {% endif %}
    </h1>
    

    {{ form_start(formCategory, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

        {{ form_row(formCategory.titre, {'attr': {'pattern': false}, 'required': false }) }}

        {{ form_row(formCategory.description, {'attr': {'rows': 15, 'pattern': false}, 'required': false}) }}

        <button type="submit" class="btn btn-dark mt-2">Enregistrer</button>

    {{ form_end(formCategory) }}
{% endblock %}